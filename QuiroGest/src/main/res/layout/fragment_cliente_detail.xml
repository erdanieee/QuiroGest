<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

    <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:minHeight="@android:dimen/thumbnail_height"
            android:minWidth="@android:dimen/thumbnail_width"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textViewNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/ExtraLargeText"
        android:text="Nombre"
        android:layout_toRightOf="@+id/imageViewFoto"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_below="@+id/imageViewFoto"
            android:id="@+id/ScrollViewClientes">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/movil"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />

            <TextView
                    android:id="@+id/EditTextMovil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />

            <TextView
                    android:id="@+id/EditTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fechaNacimiento"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profesion"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextProfesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actividadFisica"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alergia"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextAlergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/operaciones"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextOperaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                            android:textAppearance="?android:attr/textAppearanceLarge" />



            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notas"
                            android:textAppearance="?android:attr/textAppearanceSmall"  />
            
            <TextView
                    android:id="@+id/EditTextNotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/motivosDeConsultaText"
        android:id="@+id/textView"
        android:layout_below="@+id/imageViewFoto"
        android:layout_toRightOf="@+id/ScrollViewClientes"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:paddingLeft="@dimen/ExtraLargeText"
        android:autoText="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/ScrollViewClientes"
        android:paddingLeft="@dimen/ExtraLargeText"
        android:minWidth="@android:dimen/thumbnail_width"/>


</RelativeLayout>