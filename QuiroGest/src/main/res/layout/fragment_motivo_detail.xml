<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:paddingLeft="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="Fecha"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="31/12/2013"
                 />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Qué te pasa?"
                 />
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewQuePasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Dónde duele?"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewDondeDuele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Cuándo duele?"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewCuandoDuele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Cómo es el dolor?"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewFormaDolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Cuánto tiempo hace?"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewDesdeCuando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="¿Apareció de forma súbita o progresiva?"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewAparicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="Concomitancia (relación con otro tipo de dolor)"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewConcomitancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="Antecedentes violentos (cicatrices)"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewCicatrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="Actividad física"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewActividadFisica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Etiqueta"
                android:text="Observaciones"/>
            <dan.android.quirogest.views.LabelView
                android:id="@+id/textViewObservaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextOff"
                android:text="debug"
                 />

            </LinearLayout>
    </ScrollView>
</LinearLayout>
